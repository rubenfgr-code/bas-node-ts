{
  "name": "bas-node-ts",
  "version": "1.0.0",
  "description": "Base project with Node, TypeScript, ESLint, Prettier & Jest",
  "main": "main.js",
  "scripts": {
    "start": "tsc & node dist/main.js",
    "test": "jest",
    "lint": "tsc --noEmit && eslint '*/**/*.{js,ts}' --quiet --fix",
    "docker:build": "tsc & docker build -t bas-node-ts . --no-cache & docker images -f dangling=true -q | xargs docker rmi",
    "docker:run": "docker run -d --name bas-node-ts bas-node-ts",
    "docker:rm": "docker rm bas-node-ts --force"
  },
  "author": "Rub√©n Francisco Gazquez Rosales",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.24.0",
    "@typescript-eslint/parser": "^4.24.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}
